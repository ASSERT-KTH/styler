<?xml version="1.0"?>
<!DOCTYPE suppressions PUBLIC
        "-//Puppy Crawl//DTD Suppressions 1.0//EN"
        "http://www.puppycrawl.com/dtds/suppressions_1_0.dtd">

<suppressions>

    <!-- Don't check JavaDoc on package-info. -->
    <suppress checks="JavadocStyleCheck" files="package-info.java"/>

    <!-- Don't check files in resources -->
    <suppress files="src[\\/]main[\\/]resources[\\/]" checks=".*"/>

    <!-- Don't check unit tests -->
    <suppress files="src[\\/]test[\\/]java[\\/]" checks=".*"/>

</suppressions>
