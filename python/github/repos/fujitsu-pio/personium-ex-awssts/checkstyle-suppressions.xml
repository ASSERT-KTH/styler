<?xml version="1.0"?>

<!DOCTYPE suppressions PUBLIC
     "-//Puppy Crawl//DTD Suppressions 1.0//EN"
     "http://www.puppycrawl.com/dtds/suppressions_1_0.dtd">

<suppressions>
  <suppress checks="." files="net[\\/]oauth[\\/]"/>
  
  <!-- extensionモジュールは「Ext_」始まりの規則のため、以下の規則を除外  -->
  <suppress checks="TypeName" files="Ext_.*\.java"/>
  <!-- extensionはメソッド名に「_」を使用するため、以下の規則を除外  -->
  <suppress checks="MethodName" files="Ext_.*\.java"/>
  
  <suppress checks="MethodName" files=".*Test\.java"/>
  <suppress checks="MagicNumber" files=".*Test\.java"/>
  <suppress checks="JavadocPackage" files="[\\/]test[\\/]"/> 
</suppressions>
