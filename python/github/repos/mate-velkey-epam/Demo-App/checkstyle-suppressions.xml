<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE suppressions PUBLIC
    "-//Puppy Crawl//DTD Suppressions 1.1//EN"
    "http://www.puppycrawl.com/dtds/suppressions_1_1.dtd">

<suppressions>
    <suppress files=".*Test.java|ArangoDBConfig.java" checks="MagicNumberCheck"/>
    <suppress files=".*Test.java|SwaggerConfig.java|DemoController.java|DemoService.java|DemoApplication.java"
              checks="JavadocType"/>
    <suppress files=".*Test.java|SwaggerConfig.java|DemoController.java|DemoService.java|DemoApplication.java"
              checks="JavadocMethod"/>
    <suppress files=".*Test.java" checks="MethodName"/>
    <suppress files=".*Test.java" checks="Indentation"/>
    <suppress files="DemoApplication.java" checks="HideUtilityClassConstructor"/>
</suppressions>
