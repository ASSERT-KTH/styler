<!DOCTYPE suppressions PUBLIC
        "-//Puppy Crawl//DTD Suppressions 1.0//EN"
        "http://www.puppycrawl.com/dtds/suppressions_1_0.dtd">

<suppressions>
    <suppress checks=".*" files=".+[\\\/]target[\\\/].+\.java"/>
    <suppress checks=".*" files=".+[\\\/]proto[\\\/]ProtoTestObjects.java"/>
    <suppress checks=".*" files=".+[\\\/]mockito[\\\/].+\.java"/>

    <!-- Disable javadoc for tests -->
    <suppress checks="JavadocMethod" files=".+[\\\/]test[\\\/].+\.java"/>
    <suppress checks="JavadocType" files=".+[\\\/]test[\\\/].+\.java"/>
    <suppress checks="JavadocVariable" files=".+[\\\/]test[\\\/].+\.java"/>
    <suppress checks="JavadocPackage" files=".+[\\\/]test[\\\/].+\.java"/>

    <!-- Disable javadoc for OSGi test model -->
    <suppress checks="JavadocMethod" files=".+[\\\/]osgitestsmodel[\\\/].+\.java"/>
    <suppress checks="JavadocType" files=".+[\\\/]osgitestsmodel[\\\/].+\.java"/>
    <suppress checks="JavadocVariable" files=".+[\\\/]osgitestsmodel[\\\/].+\.java"/>
    <suppress checks="JavadocPackage" files=".+[\\\/]osgitestsmodel[\\\/].+\.java"/>

    <!-- Disable javadoc for JMH tests -->
    <suppress checks="JavadocMethod" files=".+[\\\/]jmh[\\\/].+\.java"/>
    <suppress checks="JavadocType" files=".+[\\\/]jmh[\\\/].+\.java"/>
    <suppress checks="JavadocVariable" files=".+[\\\/]jmh[\\\/].+\.java"/>
    <suppress checks="JavadocPackage" files=".+[\\\/]jmh[\\\/].+\.java"/>
</suppressions>
